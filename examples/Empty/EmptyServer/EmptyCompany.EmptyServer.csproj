<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(AppTargetFramework)</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <AssemblyName>EmptyCompany.EmptyServer</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>EmptyCompany.EmptyServer</PackageId>
    <Company>EmptyCompany</Company>
    <Product>EmptyCompany EmptyServer</Product>
    <Description>EmptyCompany EmptyServer</Description>
    <Copyright>Copyright © 2021 EmptyCompany</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mono.Options" Version="6.6.0.161" />
  </ItemGroup>

  <ItemGroup Condition=" '$(NoHttps)' != 'true' ">
    <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Bindings.Https" Version="1.4.366.38" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(TargetFramework)' == 'net5.0' Or '$(TargetFramework)' == 'netcoreapp3.1'">
      <ItemGroup>
        <PackageReference Include="Technosoftware.UaSolution.UaConfiguration" Version="2.3.0.3" />
        <PackageReference Include="Technosoftware.UaSolution.UaServer" Version="2.3.0.3" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Technosoftware.Net4.UaConfiguration" Version="2.2.0.9" />
        <PackageReference Include="Technosoftware.Net4.UaServer" Version="2.2.0.9" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
    <None Update="EmptyCompany.EmptyServer.Config.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>

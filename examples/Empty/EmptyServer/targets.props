<Project>
  <Choose>
    <When Condition="'$(VisualStudioVersion)' == '16.0'">
      <PropertyGroup>
        <AppTargetFrameworks>netcoreapp3.1</AppTargetFrameworks>
        <AppTargetFramework>netcoreapp3.1</AppTargetFramework>
        <TestsTargetFrameworks>netcoreapp3.1</TestsTargetFrameworks>
        <LibTargetFrameworks>net462;net472;net48;netstandard2.1;net5.0</LibTargetFrameworks>
        <LibxTargetFrameworks>net462;net472;net48;netstandard2.1;net5.0</LibxTargetFrameworks>
        <LibBinTargetFrameworks>net462;net472;net48;netstandard2.1;net5.0</LibBinTargetFrameworks>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <AppTargetFrameworks>netcoreapp3.1</AppTargetFrameworks>
        <AppTargetFramework>netcoreapp3.1</AppTargetFramework>
        <TestsTargetFrameworks>netcoreapp3.1</TestsTargetFrameworks>
        <LibTargetFrameworks>netstandard2.1</LibTargetFrameworks>
        <LibxTargetFrameworks>netstandard2.1</LibxTargetFrameworks>
        <LibBinTargetFrameworks>netstandard2.1</LibBinTargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>
</Project>
